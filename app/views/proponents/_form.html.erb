<%= form_with(model: proponent, class: "row g-3", local: true, data: { controller: "nested-form zip" }) do |form| %>
  <% if proponent.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(proponent.errors.count, "error") %> prohibited this proponent from being saved:</h2>

      <ul>
        <% proponent.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-10">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control form-control-sm" %>
  </div>

  <div class="col-md-2">
    <%= form.label :cpf, class: "form-label" %>
    <%= form.text_field :cpf, class: "form-control form-control-sm" %>
  </div>

  <p>Endere√ßo:</p>
  <%= form.fields_for :address do |address_fields| %>
      <div class="col-md-2">
        <%= address_fields.label :zip, class: "form-label" %>
        <%= address_fields.text_field :zip, class: "form-control form-control-sm", data: { zip_target: "zip", action: "keyup->zip#search" } %>
      </div>
      <div class="col-md-5">
        <%= form.label :street, class: "form-label" %>
        <%= address_fields.text_field :street, class: "form-control form-control-sm", data: { zip_target: "street" } %>
      </div>
      <div class="col-md-1">
        <%= form.label :number, class: "form-label" %>
        <%= address_fields.text_field :number, class: "form-control form-control-sm" %>
      </div>
      <div class="col-md-3">
        <%= form.label :city, class: "form-label" %>
        <%= address_fields.text_field :city, class: "form-control form-control-sm", data: { zip_target: "city" } %>
      </div>
      <div class="col-md-1">
        <%= form.label :state, class: "form-label" %>
        <%= address_fields.text_field :state, class: "form-control form-control-sm", data: { zip_target: "state" } %>
      </div>
  <% end %>

  <div class="col-md-2">
    <%= form.label :salary, class: "form-label" %>
    <%= form.text_field :salary, class: "form-control form-control-sm" %>
  </div>

  <div class="col-md-2">
    <%= form.label :inss_discount, class: "form-label" %>
    <%= form.number_field :inss_discount, class: "form-control form-control-sm", disabled: "disabled" %>
  </div>

  <div>
    <p>Contatos:
      <button data-action="click->nested-form#addAssociation" type="button" class="btn btn-primary btn-sm">
        <i class="bi bi-plus-circle"></i>
        Adicionar contato
      </button>
    </p>
    <div data-nested-form-target="container">
      <%= form.fields_for :contacts do |contact_form| %>
        <%= render "contact_fields", f: contact_form %>
      <% end %>

      <div id="contact-template" style="display:none;">
        <%= form.fields_for :contacts, Contact.new, child_index: "NEW_RECORD" do |contact_form| %>
          <%= render "contact_fields", f: contact_form %>
        <% end %>
      </div>
    </div>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
